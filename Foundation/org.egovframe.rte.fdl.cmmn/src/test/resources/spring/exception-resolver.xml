<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean name="smeResovler" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver" scope="prototype">
		<property name="defaultErrorView" value="common/error" />
		<property name="exceptionMappings">
			<props>
				<prop key="org.egovframe.rte.bsl.exception.web.ExceptionCase1">common/exceptionViewCase1
				</prop>
				<prop key="org.egovframe.rte.bsl.exception.web.ExceptionCase2">common/exceptionViewCase2
				</prop>
			</props>
		</property>
	</bean>

</beans>
